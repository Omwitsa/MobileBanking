<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.larry.trustfinger.Activities.EnquiryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:id="@+id/editingZone"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/cardColor">

        <TextView
            android:id="@+id/text_Ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Existing Member to Update Fingerprint"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/editshape"
            android:id="@+id/number"
            android:hint="ID Number "
            android:inputType="number"
            android:maxLength="8"
            android:drawablePadding="10dp"
            android:textColor="@color/textcardColor"
            android:textColorHint="@color/textcardColor"
            android:textColorHighlight="@color/textcardColor"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enquire"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/submit"
            android:textColor="@color/white"
            android:background="@drawable/signupbtnshape"/>
        <TextView
            android:id="@+id/text_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID number"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/text_first1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:textSize="20dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/text_second1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OtherNames "
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvIAlwaysHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnLogin"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_dark"
                android:text="FingerPrint Count:" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ff9800"
                android:layout_toRightOf="@id/tvIAlwaysHaveAccount"
                android:layout_marginLeft="15dp"
                android:text="count" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/FPrintnames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ff9800"
                android:layout_toRightOf="@id/tvIAlwaysHaveAccount"
                android:layout_marginLeft="15dp"
                android:text="Left,Right" />

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:id="@+id/next"
            android:background="@drawable/signupbtnshape"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/nextBack"
            android:textColor="@color/white"
            android:background="@drawable/signupbtnshape"/>
    </LinearLayout>


</ScrollView>