<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.larry.trustfinger.Activities.DepositActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:id="@+id/editingZone"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/cardColor">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/editshape"
            android:id="@+id/accno"
            android:drawablePadding="10dp"
            android:hint="Account  Number"
            android:inputType="text"
            android:textColor="@color/textcardColor"
            android:textColorHint="@color/textcardColor"
            android:textColorHighlight="@color/textcardColor"
            tools:ignore="Deprecated" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/editshape"
            android:id="@+id/cash"
            android:drawablePadding="10dp"
            android:hint="Amount"
            android:inputType="number"
            android:textColor="@color/textcardColor"
            android:textColorHint="@color/textcardColor"
            android:textColorHighlight="@color/textcardColor"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/editshape"
            android:id="@+id/name"
            android:drawablePadding="10dp"
            android:hint="Full Names"
            android:inputType="textCapCharacters"
            android:textColor="@color/textcardColor"
            android:textColorHint="@color/textcardColor"
            android:textColorHighlight="@color/textcardColor"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/editshape"
            android:id="@+id/ID"
            android:drawablePadding="10dp"
            android:inputType="textCapCharacters"
            android:hint="Idno/Admission Number"
            android:textColor="@color/textcardColor"
            android:textColorHint="@color/textcardColor"
            android:textColorHighlight="@color/textcardColor"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deposit"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/save"
            android:background="@drawable/buttonshape"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/pack"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/signupbtnshape"
            android:textColor="@color/white"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>