<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myactivities.Reports">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Agency Banking"/>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder"
        android:layout_margin="30dp"
        android:padding="@dimen/activity_vertical_margin"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="@string/text_enable_bluetooth" />

        <Button
            android:id="@+id/btn_connectd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/GREEN"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/text_connect" />

        <Spinner
            android:id="@+id/sp_deviced"
            android:layout_toLeftOf="@+id/btn_connect"
            android:layout_alignBottom="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>



    </RelativeLayout>
    <EditText
        android:id="@+id/Transsdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:cursorVisible="false"
        android:drawableRight="@drawable/ic_date"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Click Here to pick Date of Transactions"
        android:inputType="date" />
    <!--Spinner
        android:id="@+id/Dayshift"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/shift_array"
        android:prompt="@string/container_prompt" /-->
    <View
        android:id="@+id/separatord"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ff8800"/>

    <Button
        android:id="@+id/btn_print_receiptd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/GREEN"
        android:textColor="@color/tabteal"
        android:layout_margin="30dp"
        android:enabled="true"
        android:text="Print Deposits" />
    <Button
        android:id="@+id/btn_print_receiptd1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/GREEN"
        android:textColor="@color/tabteal"
        android:layout_margin="30dp"
        android:enabled="true"
        android:text="Print Withdrawals" />
    <TextView
        android:id="@+id/tvd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="visible"/>

    "


</LinearLayout>