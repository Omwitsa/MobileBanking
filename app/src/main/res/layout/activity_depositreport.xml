<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe"
    tools:context="com.aratek.trustfinger.Reports.DepositreportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Agency Banking"/>



    <EditText
        android:id="@+id/Transsdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:cursorVisible="false"
        android:drawableRight="@drawable/ic_date"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Click Here to pick Date of Transactions"
        android:inputType="date" />
    <!--Spinner
        android:id="@+id/Dayshift"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/shift_array"
        android:prompt="@string/container_prompt" /-->
    <View
        android:id="@+id/separatord"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ff8800"/>

    <Button
        android:id="@+id/btn_print_deposits"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/GREEN"
        android:textColor="@color/tabteal"
        android:layout_margin="30dp"
        android:enabled="true"
        android:text="Deposits Report" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/signupbtnshape"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tvd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="visible"/>
</LinearLayout>