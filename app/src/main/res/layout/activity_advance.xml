<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.larry.trustfinger.Activities.AdvanceActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/background_gradient" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="400dp"
    android:orientation="vertical"
    android:id="@+id/editingZone"
    android:padding="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/cardColor">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/editshape"
        android:id="@+id/sNo"
        android:drawablePadding="10dp"
        android:hint="Account  Number"
        android:textColor="@color/textcardColor"
        android:textColorHint="@color/textcardColor"
        android:editable="false"
        android:textColorHighlight="@color/textcardColor"
        tools:ignore="Deprecated"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/editshape"
        android:id="@+id/Product"
        android:drawablePadding="10dp"
        android:hint="Product Name"
        android:editable="false"
        android:textColor="@color/textcardColor"
        android:textColorHint="@color/textcardColor"
        android:textColorHighlight="@color/textcardColor"
        tools:ignore="Deprecated" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNameA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Maximum :" />

        <TextView
            android:id="@+id/tvAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ff9800"
            android:layout_toRightOf="@id/tvIAlwaysHaveAccount"
            android:layout_marginLeft="15dp"
            android:text="Amount" />

    </LinearLayout>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/editshape"
        android:id="@+id/amount"
        android:drawablePadding="10dp"
        android:hint="Amount"
        android:inputType="number"
        android:textColor="@color/textcardColor"
        android:textColorHint="@color/textcardColor"
        android:textColorHighlight="@color/textcardColor"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/submit"
        android:background="@drawable/buttonshape"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/signupbtnshape"
        android:textColor="@color/white"/>
</LinearLayout>
</RelativeLayout>
</ScrollView>