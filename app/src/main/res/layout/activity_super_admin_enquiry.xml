<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.larry.trustfinger.Activities.SuperAdminEnquiryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:id="@+id/editingZone"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/cardColor">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:maxLength="8"
            android:background="@drawable/editshape"
            android:id="@+id/edt_admin"
            android:hint="ID Number "
            android:inputType="number"
            android:drawablePadding="10dp"
            android:textColor="@color/textcardColor"
            android:textColorHint="@color/textcardColor"
            android:textColorHighlight="@color/textcardColor"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enquire"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/BtnAdmin"
            android:textColor="@color/white"
            android:background="@drawable/signupbtnshape"/>
        <TextView
            android:id="@+id/text_id20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID number"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/text_first20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:textSize="20dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/text_second20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OtherNames "
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/buttonAdmin"
            android:textColor="@color/white"
            android:background="@drawable/signupbtnshape"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/nexxtBack"
            android:textColor="@color/white"
            android:background="@drawable/signupbtnshape"/>
    </LinearLayout>


</RelativeLayout>