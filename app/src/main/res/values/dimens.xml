    -->
    <dimen name="inner_frame_layout_padding">5dp</dimen>
    <dimen name="fab_margin">16dp</dimen>

    <dimen name="three_grid_unit">24dp</dimen>
    <dimen name="one_and_a_half_grid_unit">12dp</dimen>
